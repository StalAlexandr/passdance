<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical"
    tools:context="ru.maximumdance.passcontrol.PersonActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/passListGuideLineCenterPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


    <TextView
        android:id="@+id/passName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/edit_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/passListGuideLineCenterPass"
        tools:text="Аргентинское танго (0/10)"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView


        android:id="@+id/icoEdit"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/ico_edit"

        app:layout_constraintLeft_toLeftOf="@id/passListGuideLineCenterPass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>